    "build": "npm run --silent clean && npm run --silent gulp:build"
  },
  "devDependencies": {
    "gulp": "^4.0.2",
    "gulp-merge-json": "^2.1.1",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2"
  }
